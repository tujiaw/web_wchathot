<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>wchat hot</title>
  <%- include header %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div id="main" class="col-md-6">
      <h4 id="title" class="alert-success text-center">微信热门精选</h4>

      <div class="typePanel">
        <ul>
          <% typeList.forEach(function(type) { %>
            <li class="typeItem">
              <a href="/category?typeid=<%= type.id %>"><%= type.name %></a>
            </li>
          <% }) %>
        </ul>
      </div>

      <div class="articlePanel">
        <% if (typeof(pagebean) != 'undefined' && pagebean && pagebean.contentlist.length > 0) { %>
          <% include pageButton %>
          <div class="articleList">
            <% pagebean.contentlist.forEach(function(article) { %>
                <% include article %>
            <% }); %>
          </div>
        <% } %>
      </div>

      </div> <!-- main -->
      <div class="col-md-3"></div>
    </div> <!-- row -->
  </div> <!-- container -->
</body>
</html>
